<Page x:Class="Morning.Pages.MenuPages.ManagerMenuPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Morning.Pages.MenuPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="200"
      Title="ManagerMenuPages">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Hidden">
            <StackPanel>
                <Button x:Name="CatalogTable" Click="CatalogTable_Click" Content="Каталог"  Margin="0,10"/>
                <Button x:Name="OrderTable" Click="OrderTable_Click" Content="Заказы" />
                <Button x:Name="DiagramTable" Click="DiagramTable_Click" Content="Диаграммы" Margin="0,10"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
