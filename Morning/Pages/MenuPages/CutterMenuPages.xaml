<Page x:Class="Morning.Pages.MenuPages.CutterMenuPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Morning.Pages.MenuPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="200"
      Title="CutterMenuPages">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Hidden">
            <StackPanel>
                <Button x:Name="CatalogTable" Content="Каталог" Click="CatalogTable_Click" Margin="0,10"/>
                <Button x:Name="OrderTable" Content="Заказы" Click="OrderTable_Click"/>
                <Button x:Name="Calculations" Content="Расчёты" Click="Calculations_Click" Margin="0,10"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
